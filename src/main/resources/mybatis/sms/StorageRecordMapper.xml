    </update>



    <select id="selectSkuStorageFeeByMonth" parameterType="java.util.Date" resultType="SkuStorageFee">
        select pr.sku,sum(sr.storage_fee) as storageFee from pms_productinfo_relation pr LEFT JOIN sms_storage_record sr on pr.asin=sr.asin
        where sr.storage_fee is not null  group by pr.sku
    </select>
</mapper>